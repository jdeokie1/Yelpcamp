<!--Include the header partials file -->

<% include ../partials/header %>

<!--Display the form to edit the campground -->

<div class="row justify-content-center">
        <div class="col-md-12">
        <h1 style="text-align: center">Edit <%= campground.name %> Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" id="name" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" id="image" type="text" name="campground[image]" value="<%= campground.image %>">
				<div class="form-group">
					<label for="cost">Cost</label>
  <input class="form-control" id="cost" type="number" name="campground[cost]" value="<%= campground.cost %>" step="0.01" min="0" required>
</div>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" id="description" type="text" name="campground[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<!--Include the footer partials -->

<% include ../partials/footer %>